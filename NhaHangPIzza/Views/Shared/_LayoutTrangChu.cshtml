<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://site-assets.fontawesome.com/releases/v6.4.2/css/all.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400&display=swap" rel="stylesheet">
    <script src="~/Scripts/jquery-3.7.1.slim.min.js"></script>
    <script src="~/Scripts/jquery-3.7.1.min.js"></script>
    <style>
        /* Loại bỏ độ dãn và margin của ảnh */
        .no-padding {
            padding: 0;
        }

        /* Thiết lập chiều cao của cột 1 là 100% của màn hình và kiểu dạng fixed-top */
        .column-1 {
            height: 100vh; /* Chiều cao của cột 1 là 100% của viewport height */
            position: sticky;
            top: 0;
        }

        /* Màu tùy chỉnh cho dòng 1 */
        .custom-color {
            background-color: #181a1c; /* Thay thế #your-custom-color bằng mã màu bạn muốn */
        }

        /* Màu trắng cho border bên phải cột 1 */
        .border-white {
            border-right: 1px solid #ffffff;
        }
    </style>
</head>
<body>

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-1 bg-light column-1 p-0 m-0 border-white">
                <!-- Dòng 1 -->
                <div class="row h-20 m-0 border-bottom border-white custom-color d-flex align-items-center text-center">
                    <!-- Nội dung dòng 2 -->
                    <a href="@Url.Action("Index","Home")" class="text-decoration-none">
                        <img src="~/Images/Icon/pizza.png" style="width:40px;" />
                        <p class="text-white mb-0">VIETNAM PIZAA</p>
                    </a>
                </div>
                <!-- Dòng 2 -->
                <div class="row h-20 m-0 border-bottom border-white custom-color d-flex align-items-center text-center">
                    <!-- Nội dung dòng 2 -->
                    <a href="@Url.Action("Index","BanhPizza")" class="text-decoration-none">
                        <i class="fa-regular fa-pizza-slice fa-2xl" style="color: #ffffff;"></i>
                        <p class="text-white mb-0">Bánh Pizza</p>
                    </a>
                </div>
                <!-- Dòng 3 -->
                <div class="row h-20 m-0 border-bottom border-white custom-color d-flex align-items-center text-center">
                    <!-- Nội dung dòng 3 -->
                    <a href="@Url.Action("Index","NuocGiaiKhat")" class="text-decoration-none">
                        <i class="fa-regular fa-cup-straw-swoosh fa-2xl" style="color: #ffffff;"></i>
                        <p class="text-white mb-0">Nước Giải Khát</p>
                    </a>
                </div>
                <!-- Dòng 4 -->
                <div class="row h-20 m-0 border-bottom custom-color d-flex align-items-center text-center">
                    <!-- Nội dung dòng 4 -->
                    <a href="@Url.Action("Index","GioHang")" class="text-decoration-none">
                        <i class="fa-regular fa-cart-shopping fa-2xl" style="color: #ffffff;"></i>
                        <p class="text-white mb-0">Giỏ Hàng</p>
                    </a>
                </div>

                <!-- Dòng 5 (Combo) -->
                <div class="row h-20 m-0 custom-color d-flex align-items-center text-center">
                    <!-- Nội dung dòng 5 -->
                    <a href="@Url.Action("Index","Combo")" class="text-decoration-none">
                        <i class="fa-regular fa-box-full fa-2xl" style="color: #ffffff;"></i>
                        <p class="text-white mb-0">Combo</p>
                    </a>
                </div>
            </div>

            <!-- Cột 2 -->
            <div class="col-md-11 p-0 m-0">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>